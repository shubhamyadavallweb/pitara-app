{
  "appId": "com.pitara.app",
  "appName": "Pitara",
  "webDir": "dist",
  "bundledWebRuntime": false,
  "server": {
    "androidScheme": "pitara",
    "cleartext": true,
    "allowNavigation": ["jdfnkvbfpvzddjtgiovj.supabase.co"]
  },
  "plugins": {
    "CapacitorHttp": {
      "enabled": true
    },
    "SplashScreen": {
      "launchAutoHide": false
    },
    "App": {
      "url": "pitara://auth/callback",
      "deepLinks": [
        {
          "path": "auth/callback",
          "host": "pitara"
        },
        {
          "path": "/auth/callback",
          "host": "pitara"
        },
        {
          "path": "/auth/*",
          "host": "pitara"
        }
      ]
    }
  }
} 