{
  "appId": "com.pitara.app",
  "appName": "Pitara",
  "webDir": "dist",
  "bundledWebRuntime": false,
  "server": {
    "androidScheme": "pitara",
    "cleartext": true,
    "allowNavigation": [
      "jdfnkvbfpvzddjtgiovj.supabase.co", 
      "accounts.google.com",
      "*.googleusercontent.com"
    ]
  },
  "plugins": {
    "CapacitorHttp": {
      "enabled": true
    },
    "SplashScreen": {
      "launchAutoHide": false
    },
    "App": {
      "url": "pitara://auth/callback",
      "deepLinks": [
        {
          "path": "callback",
          "host": "auth"
        },
        {
          "path": "auth/callback",
          "host": "auth"
        },
        {
          "path": "auth/*",
          "host": "auth"
        }
      ]
    },
    "Browser": {
      "presentationStyle": "fullscreen"
    },
    "GoogleAuth": {
      "scopes": ["profile", "email"],
      "forceCodeForRefreshToken": false
    }
  }
}